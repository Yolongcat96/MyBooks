<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="30dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/article_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_sample_book1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAllCaps="true"
            android:textColor="@color/book_title_color"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Harry Potter" />


        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/book_author_color"
            android:textSize="15sp"
            tools:text="J.K.Rowling" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/book_price_color"
                android:textSize="18sp"
                tools:text="$9.99" />

            <TextView
                android:id="@+id/book_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/book_quantity_color"
                android:textSize="16sp"
                tools:text="(Stock:3)" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/directive_arrow"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_click_arrow" />

</LinearLayout>

